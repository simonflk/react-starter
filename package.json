{
  "name": "react-starter",
  "version": "0.9.0",
  "description": "A personal, compact react-starter with linting, formatting configured",
  "scripts": {
    "dev": "webpack-dev-server --hot",
    "prebuild": "npm run clean",
    "build": "webpack --env.production --progress",
    "clean": "rimraf dist",
    "pretest": "npm run lint",
    "test": "npm run test:jest --",
    "posttest": "npm run format",
    "lint": "eslint . --cache --fix",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write --ignore-path .gitignore \"**/*.{js,css,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-react": "7.8.3",
    "@testing-library/react": "9.4.0",
    "autoprefixer": "9.7.4",
    "babel-loader": "8.0.6",
    "core-js": "3.6.4",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-react": "7.18.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "git-rev-sync": "2.0.0",
    "html-webpack-multi-build-plugin": "1.1.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.2.0",
    "jest": "25.1.0",
    "lint-staged": "10.0.2",
    "mini-css-extract-plugin": "0.9.0",
    "postcss-loader": "3.0.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "style-loader": "1.1.3",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.1",
    "webpack-merge": "4.2.2"
  },
  "dependencies": {
    "prop-types": "15.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
